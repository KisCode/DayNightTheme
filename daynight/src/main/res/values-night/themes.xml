<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayNight" parent="App.Theme.Base">
        <!--    <style name="Theme.DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">-->
        <!--    https://blog.csdn.net/googledevs/article/details/109567406-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. 交互性颜色，如RadioButton/CheckBox 勾选颜色等 -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>


        <!--    背景颜色    -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!--    用于表单或表面 (如卡片颜色和应用的底部弹出菜单颜色)     -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!--    错误颜色    -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarBackground</item>
        <!--    状态栏字体颜色   true:深灰色， false：白色  -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <!--
                <item name="colorControlNormal">@color/colorError</item>
                <item name="colorControlActivated">#00FF00</item>
                -->
        <!--    定义通用按钮样式    -->
        <item name="buttonStyle">@style/CommonButtonStyle</item>
        <item name="materialButtonStyle">@style/CommonButtonStyle</item>
        <!--    定义radiobutton样式    -->
        <item name="radioButtonStyle">@style/CommonRadioButtonStyle</item>

        <!--    定义Toolbar样式   -->
        <item name="toolbarStyle">@style/CommonToolbarStyle.Night</item>

        <!--    自定义Cardview样式    -->
        <item name="cardViewStyle">@style/CommonCardviewStyle</item>
        <item name="materialCardViewStyle">@style/CommonCardviewStyle</item>
    </style>
</resources>